menuconfig ETH_ETHOC
	bool "Ethoc Ethernet driver"
	help
	  Enable Ethoc Ethernet driver.  Note, this driver performs one shot PHY
	  setup.  There is no support for PHY disconnect, reconnect or
	  configuration change.

if ETH_ETHOC

config ETHOC_BD_TX_NUM
		def_int 16

config ETHOC_BD_RX_NUM
		def_int 24

config ETHOC_CLKFREQ
		def_int 50000000

endif # ETH_ETHOC
